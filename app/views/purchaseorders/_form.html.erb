<%= form_for @purchaseorder, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Purchaseorder</legend>

    <div class="control-group">
      <%= f.label :supplier_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :supplier_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :sent_at, :class => 'control-label' %>
      <div class="controls">
        <%= f.datetime_select :sent_at, :class => 'datetime_select' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :instructions, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :instructions, :class => 'text_area' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', purchaseorders_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
