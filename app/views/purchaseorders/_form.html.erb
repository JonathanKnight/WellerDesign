<%= simple_form_for @purchaseorder, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Purchaseorder</legend>
    <%= render 'purchases/purchase_titles' %>
    <% @purchases.each do |purchase| %>
    <%= render purchase %>
    <% end %>
    <%= render 'purchases/purchase_footer' %>


    <%= f.association :supplier %>
    <%= f.input :instructions %>


    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', purchaseorders_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
