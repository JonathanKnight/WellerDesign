    <tr>
      <td><%= link_to supplier.name, supplier_path(supplier) %></td>
      <td><%= supplier.email %></td>
      <td><%= supplier.address %></td>
      <td><%= supplier.items.count %></td>
      <td><%= supplier.purchaseorders.count %></td>
      <td><%= supplier.outstanding_purchases.count %></td>
      <td>
      <% if supplier.outstanding_purchases.count > 0 %>
      <%= link_to "Create PO", new_purchaseorder_path(:supplier_id => supplier.id), :class => 'btn btn-mini btn-primary' %>
      <% end %>
      <%= link_to "Edit", edit_supplier_path(supplier),:class => 'btn btn-mini' %>
      <%= link_to 'Destroy', supplier_path(supplier), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
      </td>    
    </tr>


