<%= form_for @job, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Job</legend>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :address, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :address, :class => 'text_area' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :client_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :client_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :markup, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :markup, :class => 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', jobs_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
