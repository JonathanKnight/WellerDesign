<%= form_for @estimate, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Estimate</legend>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :room_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :room_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :sale_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :sale_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', estimates_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
