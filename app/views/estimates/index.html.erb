<h1>Estimates</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @estimates.each do |estimate| %>
      <tr>
        <td><%= estimate.id %></td>
        <td><%= link_to estimate.name, estimate_path(estimate) %></td>
        <td><%= estimate.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_estimate_path(estimate), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', estimate_path(estimate), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_estimate_path, :class => 'btn btn-primary' %>
