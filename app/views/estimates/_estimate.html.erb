    <tr>
      <td><%= link_to estimate.name, estimate_path(estimate) %></td>
      <td><%= estimate.room.name %></td>
      <td><%= estimate.value.map{ |x| number_to_currency(x,:locale => 'en' )} %></td>
      <td><%= estimate.elements.count %></td>
      <td><%= estimate.sale %></td>
      <% if estimate.finished %>
      <td>
      <%= link_to 'Sell', new_sale_path(:estimate_id => estimate.id, :quantity => estimate.quantity,:price_ex_vat => estimate.price_ex_vat*estimate.room.job.markup, :price_inc_vat => estimate.price_inc_vat*estimate.room.job.markup),
            :class => 'btn btn-mini btn-primary' %>
      <%= link_to 'Edit', edit_estimate_path(estimate), :class => 'btn btn-mini' %>
       </td>
      <% elsif estimate.started %>
      <td>
      <%= link_to 'Edit', edit_estimate_path(estimate), :class => 'btn btn-mini' %>
      </td>
      <% else %>
      <td>
      <%= link_to 'Edit', edit_estimate_path(estimate), :class => 'btn btn-mini' %>
      <%= link_to 'Destroy', estimate_path(estimate), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>      
      </td>
      <% end %>
    </tr>


