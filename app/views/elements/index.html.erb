<h1>Elements</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Estimate</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @elements.each do |element| %>
      <tr>
        <td><%= element.id %></td>
        <td><%= link_to element.estimate_id, element_path(element) %></td>
        <td><%= element.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_element_path(element), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', element_path(element), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_element_path, :class => 'btn btn-primary' %>
