<%= form_for @element, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Element</legend>

    <div class="control-group">
      <%= f.label :estimate_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :estimate_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :item_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :item_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :quantity, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :quantity, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :due_at, :class => 'control-label' %>
      <div class="controls">
        <%= f.datetime_select :due_at, :class => 'datetime_select' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :completed_at, :class => 'control-label' %>
      <div class="controls">
        <%= f.datetime_select :completed_at, :class => 'datetime_select' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :deleted_at, :class => 'control-label' %>
      <div class="controls">
        <%= f.datetime_select :deleted_at, :class => 'datetime_select' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', elements_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
