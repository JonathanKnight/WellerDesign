<h1>Room</h1>

<p>
  <b>Name</b><br>
  <%= @room.name %>
</p>

<p>
  <b>Job</b><br>
  <%= @room.job_id %>
</p>

<p>
  <b>Width</b><br>
  <%= @room.width %>
</p>

<p>
  <b>Length</b><br>
  <%= @room.length %>
</p>

<p>
  <b>Height</b><br>
  <%= @room.height %>
</p>

<p>
  <b>Windows</b><br>
  <%= @room.windows %>
</p>

<div class="form-actions">
  <%= link_to 'Back', rooms_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_room_path(@room), :class => 'btn' %>
  <%= link_to 'Delete', room_path(@room), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
