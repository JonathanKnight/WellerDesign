<h1>Rooms</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.id %></td>
        <td><%= link_to room.name, room_path(room) %></td>
        <td><%= room.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_room_path(room), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', room_path(room), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_room_path, :class => 'btn btn-primary' %>
